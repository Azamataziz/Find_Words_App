<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pattern">

    <LinearLayout
        android:background="@drawable/coin_back"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/top_line"
        app:layout_constraintEnd_toEndOf="@id/end_line">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:padding="7dp"
            android:src="@drawable/coins"/>
        <TextView
            android:id="@+id/coinView"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:text="555"
            android:paddingEnd="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/levelView"
        android:background="@drawable/circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/top_line"
        app:layout_constraintStart_toStartOf="@id/horizontal_line2"
        app:layout_constraintEnd_toEndOf="@id/horizontal_line2"
        android:textSize="20sp"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_line"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_line"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9537713" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/image_solid"
        android:padding="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/horizontal_line2"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constraintTop_toTopOf="@id/top_line" />
    <ImageView
        android:id="@+id/imageView2"
        android:background="@drawable/image_solid"
        android:padding="10dp"
        android:layout_marginStart="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/top_line"
        app:layout_constraintStart_toStartOf="@id/horizontal_line2"
        app:layout_constraintEnd_toEndOf="@id/end_line"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/image_solid"
        android:padding="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/imageView1"
        app:layout_constraintEnd_toStartOf="@id/horizontal_line2"
        app:layout_constraintStart_toStartOf="@id/start_line"/>
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/image_solid"
        android:padding="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/horizontal_line2"
        app:layout_constraintEnd_toEndOf="@id/end_line"/>



    <ImageView
        android:id="@+id/btnClear"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/x_button"
        android:background="#1D81CE"
        app:layout_constraintStart_toEndOf="@id/linear_answer"
        app:layout_constraintTop_toTopOf="@id/linear_answer"
        app:layout_constraintBottom_toBottomOf="@id/linear_answer"/>
    <LinearLayout
        android:id="@+id/linear_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintTop_toTopOf="@id/vertical_line2"
        app:layout_constraintBottom_toBottomOf="@id/vertical_line3">

        <TextView
            android:textAllCaps="true"
            style="@style/letters_style"/>
        <TextView
            android:visibility="gone"
            style="@style/letters_style"/>
        <TextView
            android:visibility="gone"
            style="@style/letters_style"/>
        <TextView
            android:visibility="gone"
            style="@style/letters_style"/>
        <TextView
            android:visibility="gone"
            style="@style/letters_style"/>
        <TextView
            android:visibility="gone"
            style="@style/letters_style"/>
        <TextView
            android:visibility="gone"
            style="@style/letters_style"/>
        <TextView
            android:visibility="gone"
            style="@style/letters_style"/>
        <TextView
            android:visibility="gone"
            style="@style/letters_style"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/btnHelper"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:background="#1D81CE"
        android:src="@drawable/azz"
        app:layout_constraintBottom_toBottomOf="@id/variantsView"
        app:layout_constraintStart_toEndOf="@id/variantsView"/>
    <ImageView
        android:id="@+id/btnDelete"
        android:src="@drawable/delete_blue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#1D81CE"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/variantsView"
        app:layout_constraintStart_toEndOf="@id/variantsView"/>

    <RelativeLayout
        android:id="@+id/variantsView"
        android:layout_marginEnd="40dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@id/start_line"
        app:layout_constraintEnd_toEndOf="@id/end_line"
        app:layout_constraintTop_toTopOf="@id/vertical_line3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btns"
            android:tag="1"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btn2"
            android:tag="2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/btn1"
            android:background="@drawable/btns"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn3"
            android:tag="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/btn2"
            android:background="@drawable/btns"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btn4"
            android:tag="4"
            android:background="@drawable/btns"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/btn3"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btn5"
            android:tag="5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/btn4"
            android:layout_alignParentTop="true"
            android:background="@drawable/btns"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn6"
            android:tag="6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/btn5"
            android:layout_alignParentTop="true"
            android:background="@drawable/btns"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn7"
            android:tag="7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/btn1"
            android:background="@drawable/btns"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn8"
            android:tag="8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/btns"
            android:layout_toEndOf="@id/btn7"
            android:layout_below="@id/btn2"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn9"
            android:tag="9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/btn8"
            android:background="@drawable/btns"
            android:layout_below="@id/btn3"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn10"
            android:tag="10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/btns"
            android:layout_toEndOf="@id/btn9"
            android:layout_below="@id/btn2"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn11"
            android:tag="11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/btn10"
            android:layout_below="@id/btn2"
            android:background="@drawable/btns"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn12"
            android:tag="12"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/btn11"
            android:layout_below="@id/btn2"
            android:background="@drawable/btns"
            android:textColor="@color/black"
            android:textSize="30sp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>